[core]
	preloadindex = true
	hooksPath = ~/.config/git/hooks

[diff]
	external = difft

[advice]
	statusHints = false

[push]
	autoSetupRemote = true

[pull]
	rebase = true

[rebase]
	missingCommitsCheck = warn

[include]
	path = ~/.config/git/user

[url "git@github.com:"]
	insteadOf = "github:"

